{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "runOnChangeOnly": false,
  "watch": [
    "src/api/*/*.js"
  ],
  "env": {
    "NODE_ENV": "development",
    "CONFIG_PATH": "../../../mock/config.json"
  },
  "ext": "js"
}